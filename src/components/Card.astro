---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="link-card">
	<a href={href}>
		<h2 class="headingSmall">
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="textLarge">
			{body}
		</p>
	</a>
</div>

<style>
	.link-card {
		list-style: none;
		display: flex;
		border-radius: 0.5rem;
		color: var(--white);
		background-color: var(--green);
		box-shadow: var(--blur16px);
		opacity: 0.9;
	}
	a {
		width: 100%;
		padding: calc(1.5rem - 1px);
		border-radius: 0.5rem;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	.link-card:hover {
		opacity: 1;
	}

	.link-card:active {
		transform: scale(0.98);
	}
</style>

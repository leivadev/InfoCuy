---
import Logotipo from '../Logotipo.astro'
---

<header>
    <div class="header-wrapper container">
        <a href="/" class="link-logo">
            <img src="InfoCuyLogo-white.svg" alt="infocuy logo" width="50rem">
            <Logotipo mode='dark' />
        </a>
        <nav class="navbar textXLarge">
            <a href="/noticias">Noticias</a>
            <a href="/eventos">Eventos</a>
            <a href="/turismo">Turismo</a>
            <a href="/servicios">Servicios</a>
        </nav>
    </div>
</header>

<style>
    header {
        display: flex;
        position: sticky;
        z-index: 999;
        top: 0;
        padding: 1.5rem 0;
        background-color: var(--green);
        border-bottom: 1px solid #1d685f;
    }

    .link-logo {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .header-wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .navbar {
        display: flex;
        gap: 2rem;
    }

    .navbar a {
        color: var(--white);
    }

    .navbar a:hover {
        opacity: 0.8;
        color: #a6e9d9;
        transition: .3s;
    }

    .navbar a:active {
        opacity: 0.5;
    }

    @media screen and (max-width: 768px){
        .navbar {
            font-size: 1rem;
        }
    }
</style>